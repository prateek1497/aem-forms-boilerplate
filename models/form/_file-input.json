{
    "definitions": [
        {
            "title": "File Attachment",
            "id": "file-input",
            "plugins": {
                "xwalk": {
                    "page": {
                        "resourceType": "core/fd/components/form/fileinput/v2/fileinput",
                        "template": {
                            "jcr:title": "File Attachment",
                            "fieldType": "file-input",
                            "accept": [
                                "audio/*",
                                "video/*",
                                "image/*",
                                "text/*",
                                "application/pdf"
                            ],
                            "buttonText": "Attach",
                            "dragDropText": "Drag and Drop To Upload",
                            "type": "file",
                            "enabled": true,
                            "visible": true,
                            "alwaysShowShortDescription": false
                        }
                    }
                }
            }
        }
    ],
    "models": [
        {
            "id": "file-input",
            "fields": [
                {
                    "component": "container",
                    "name": "basic",
                    "label": "Basic",
                    "collapsible": false,
                    "fields": [
                        {
                            "...": "./_common.json#/basicfields"
                        },
                        {
                            "component": "text",
                            "name": "buttonText",
                            "label": "Button Title",
                            "valueType": "string"
                        },
                        {
                        "component": "richtext",
                        "name": "dragDropText",
                        "label": "Drag Drop Text",
                        "valueType": "string"
                        }
                    ]
                },
                {
                    "component": "container",
                    "name": "help",
                    "label": "Help Content",
                    "collapsible": true,
                    "fields": [
                        {
                            "...": "./_common.json#/helpfields"
                        },
                        {
                            "component": "boolean",
                            "name": "alwaysShowShortDescription",
                            "label": "Always show short description",
                            "valueType": "boolean"
                        }
                    ]
                },
                {
                    "component": "container",
                    "name": "validation",
                    "label": "Validation",
                    "collapsible": true,
                    "fields": [
                        {
                            "...": "./_common.json#/validationfields"
                        },
                        {
                            "component": "text",
                            "name": "validateExpMessage",
                            "label": "Script validation message",
                            "valueType": "string",
                            "description": "Displayed when validation script fails."
                        },
                        {
                            "component": "number",
                            "name": "maxFileSize",
                            "label": "Maximum file size (MB)",
                            "valueType": "string"
                        },
                        {
                            "component": "text",
                            "name": "maxFileSizeMessage",
                            "label": "Maximum file size error message",
                            "valueType": "string"
                        },
                        {
                            "component": "text",
                            "name": "accept",
                            "label": "Allowed file types",
                            "valueType": "string",
                            "multi": true
                        },
                        {
                            "component": "text",
                            "name": "acceptMessage",
                            "label": "File type error message",
                            "valueType": "string"
                        }
                    ]
                }
            ]
        }
    ]
}